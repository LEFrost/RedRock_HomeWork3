<Page
    x:Class="App22.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App22"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF048CFD" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel Height="50" VerticalAlignment="Top" Margin="0,40" Orientation="Vertical">
            <Button Name="MyButton" Content="开始抽奖" Foreground="Red" Background="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10" Click="MyButton_Click"/>
            <!--<Button Name="clear" Content="清空结果" VerticalAlignment="Center" Margin="20,0"/>-->
        </StackPanel>
        <StackPanel Height="45" VerticalAlignment="Top" Margin="0,90">
            <TextBlock x:Name="TB" HorizontalAlignment="Center" Foreground="Red" FontSize="25"/>

        </StackPanel>
        <StackPanel Name="stp" VerticalAlignment="Bottom" Height="450">
            <TextBlock Text="中奖数:"/>
        </StackPanel>
    </Grid>
</Page>
